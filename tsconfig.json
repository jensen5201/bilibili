{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "lib": ["dom", "es2015", "es7"],
        "baseUrl": "./",
        "paths": {
            "@": ["@", "src"],
            "vue$": ["vue$"]
        },
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "lib",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        // "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "noEmit": false
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "compileOnSave": false
}
